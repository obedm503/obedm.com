---
import { Footer } from "../components/footer";
import MainHead from "../components/MainHead.astro";
import Nav from "../components/Nav.astro";

const { frontmatter } = Astro.props;
---

<html lang="en">
  <head>
    <MainHead title={frontmatter.title} description={frontmatter.description} />
  </head>

  <body class="bg-background text-foreground font-sans">
    <Nav />

    <main>
      <div class="mx-auto flex max-w-3xl flex-col gap-2 px-4">
        <h1 class="pb-2 pt-6 text-2xl font-bold md:pt-8">
          {frontmatter.title}
        </h1>
        <p class="text-muted-foreground text-sm">{frontmatter.minutesRead}</p>
        {
          frontmatter.description ? (
            <h2 class="text-lg font-medium">{frontmatter.description}</h2>
          ) : null
        }
      </div>

      <div class="prose mx-auto max-w-3xl px-4 py-6">
        <slot />
      </div>
    </main>

    <Footer />
  </body>
</html>
